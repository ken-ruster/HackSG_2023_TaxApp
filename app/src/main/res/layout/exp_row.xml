<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingBottom="4dp"
    android:background="@color/gray_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/editIcon"
        android:src="@drawable/ic_edit"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/expVal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/expName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Fuel"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/expType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Type: Allowable Business Expense"
        android:textSize="16sp"
        android:textColor="@color/darkBlueFont"
        android:textAlignment="viewStart"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expName" />

    <TextView
        android:id="@+id/expVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Amount: $0"
        android:textSize="16sp"
        android:textColor="@color/darkBlueFont"
        android:textAlignment="viewStart"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expType" />

    <TextView
        android:id="@+id/proportions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/proportions"
        android:textSize="16sp"
        android:textColor="@color/darkBlueFont"
        android:textAlignment="viewStart"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expVal" />

</androidx.constraintlayout.widget.ConstraintLayout>